<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/itemLayput"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_button_border_blue"
        android:padding="10dp">

<!--        <androidx.core.widget.NestedScrollView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content">-->

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/serialNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="Sr NO"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/transactionNoText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10sp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="TRANSACTION No"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/upiRefIdText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10sp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="UPIRefID"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10sp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="Date &amp;    Time"
                            android:textSize="12dp"
                            android:textStyle="bold" />

<!--                        <TextView-->
<!--                            android:id="@+id/timeText"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginStart="@dimen/dimen_10sp"-->
<!--                            android:fontFamily="@font/roboto_medium"-->
<!--                            android:gravity="center"-->
<!--                            android:hint="Time"-->
<!--                            android:textSize="12dp"-->
<!--                            android:textStyle="bold" />-->

                        <TextView
                            android:id="@+id/transferFromText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10sp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="TRANSFER FROM"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/transferToText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10sp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="TRANSFER To"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/serviceTypeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10sp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="SERVICE TYPE"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/crText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10sp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="CR"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/drText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10sp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="DR"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/balanceText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10sp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="BALANCE"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/remarksText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dimen_10sp"
                            android:layout_marginEnd="@dimen/dimen_30sp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="REMARKS"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
<!--        </androidx.core.widget.NestedScrollView>-->
    </RelativeLayout>
</LinearLayout>
