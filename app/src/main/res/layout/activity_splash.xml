<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_32sp"
                    android:layout_marginTop="@dimen/dimen_100sp"
                    android:layout_marginEnd="@dimen/dimen_32sp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Welcome"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_50sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/imageView"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_32sp"
                    android:layout_marginTop="@dimen/dimen_10sp"
                    android:layout_marginEnd="@dimen/dimen_32sp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Happy To See You"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18sp"
                    app:layout_constraintEnd_toEndOf="@id/textView"
                    app:layout_constraintStart_toStartOf="@id/textView"
                    app:layout_constraintTop_toBottomOf="@id/textView" />


                <ImageView
                    android:id="@+id/textView1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/dimen_44dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:src="@drawable/dashboardlogo"
                    android:scaleType="centerCrop"
                    android:textSize="@dimen/dimen_20sp"
                    app:layout_constraintEnd_toEndOf="@id/textView2"
                    app:layout_constraintStart_toStartOf="@id/textView2"
                    app:layout_constraintTop_toBottomOf="@id/textView2" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView1"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/women" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--            <androidx.appcompat.widget.AppCompatTextView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="@dimen/dimen_32sp"-->
            <!--                android:gravity="center"-->
            <!--                android:textStyle="bold"-->
            <!--                android:fontFamily="@font/roboto_medium"-->
            <!--                android:textSize="@dimen/dimen_32sp"-->
            <!--                android:textColor="@color/colorPrimary"-->
            <!--                android:text="BOS PAY" />-->


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tvBtnLogin"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44dp"
                android:layout_marginTop="@dimen/dimen_32sp"
                android:layout_marginEnd="@dimen/dimen_32sp"
                android:visibility="gone"
                android:layout_marginStart="@dimen/dimen_32sp"
                android:background="@drawable/bg_button"
                android:textSize="@dimen/dimen_16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="Login" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tvBtnSignUp"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44dp"
                android:layout_marginTop="@dimen/dimen_16sp"
                android:layout_marginEnd="@dimen/dimen_32sp"
                android:layout_marginBottom="@dimen/dimen_32sp"
                android:visibility="gone"
                android:layout_marginStart="@dimen/dimen_32sp"
                android:background="@drawable/bg_button"
                android:textSize="@dimen/dimen_16sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="SignUp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>