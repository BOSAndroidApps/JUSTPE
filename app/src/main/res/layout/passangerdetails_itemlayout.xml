<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/dimen_6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/passangertype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADULT 1"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="@dimen/dimen_14sp"/>


            <LinearLayout
                android:id="@+id/firstnamelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_6dp">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_12sp"
                    android:textColor="@color/black"
                    android:text="@string/firstname"/>

                <TextView
                    android:id="@+id/firstnametxt"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/button_text_gray"
                    android:textSize="@dimen/dimen_12sp"
                    android:layout_height="wrap_content"
                    android:hint="xyz"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lastnamelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_12sp"
                    android:layout_height="wrap_content"
                    android:text="@string/lastname"/>

                <TextView
                    android:id="@+id/lastnametxt"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="@dimen/dimen_12sp"
                    android:textColor="@color/button_text_gray"
                    android:layout_height="wrap_content"
                    android:hint="xyz"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/genderlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="@dimen/dimen_12sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"/>

                <TextView
                    android:id="@+id/gendertxt"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/button_text_gray"
                    android:textSize="@dimen/dimen_12sp"
                    android:layout_height="wrap_content"
                    android:hint="male"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/doblayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="@dimen/dimen_12sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="DOB"/>

                <TextView
                    android:id="@+id/dobtxt"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="@string/dob"
                    android:textColor="@color/button_text_gray"
                    android:textSize="@dimen/dimen_12sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/passportNolayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="@dimen/dimen_12sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Passport No"/>

                <TextView
                    android:id="@+id/passportno"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="A1234567"
                    android:textColor="@color/button_text_gray"
                    android:textSize="@dimen/dimen_12sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/passportissuingcountrylayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="@dimen/dimen_12sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Passport Issuing Country Name"/>

                <TextView
                    android:id="@+id/passportcountryname"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="India"
                    android:textColor="@color/button_text_gray"
                    android:textSize="@dimen/dimen_12sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/passportexpirydatelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="@dimen/dimen_12sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Passport Expiry Date"/>

                <TextView
                    android:id="@+id/passportexpirydate"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="@string/passportexpiredate"
                    android:textColor="@color/button_text_gray"
                    android:textSize="@dimen/dimen_12sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>