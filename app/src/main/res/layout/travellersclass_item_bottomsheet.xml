<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_100dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cross"
                android:src="@drawable/cross_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/edittext_color"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_gravity="center"/>

        <TextView
            android:text="@string/selectclass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightBlack"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_16sp"
            android:padding="@dimen/dimen_10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/secondtitle"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/numbertravellers"
        android:textSize="@dimen/dimen_12sp"
        android:layout_margin="@dimen/dimen_10dp"
        android:textColor="@color/inputtext_boxstroke"/>

    <LinearLayout
        android:id="@+id/adult_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/secondtitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/adulttxt"
                    android:text="@string/adult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/adulagetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adultage"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/dimen_6dp"
                    app:layout_constraintLeft_toRightOf="@+id/adulttxt"
                    app:layout_constraintTop_toTopOf="@+id/adulttxt"
                    app:layout_constraintBottom_toBottomOf="@+id/adulttxt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/ontheway"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/adulttxt"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dimen_10dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_10dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/dimen_6dp"
                    app:cardElevation="@dimen/dimen_4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/dimen_6dp">

                    <ImageView
                        android:id="@+id/minimize_adult"
                        android:padding="@dimen/dimen_4dp"
                        android:layout_width="@dimen/dimen_30dp"
                        android:layout_height="@dimen/dimen_30dp"
                        android:layout_margin="@dimen/dimen_4dp"
                        android:src="@drawable/minusicon"
                        app:tint="@color/text_color"/>

                    <TextView
                        android:id="@+id/numberofadult"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/dimen_16sp"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:padding="@dimen/dimen_6dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/addition_adult"
                        android:padding="@dimen/dimen_4dp"
                        android:layout_width="@dimen/dimen_30dp"
                        android:layout_height="@dimen/dimen_30dp"
                        android:layout_margin="@dimen/dimen_4dp"
                        android:src="@drawable/addicon"
                        app:tint="@color/text_color"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/child_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/adult_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/childtxt"
                    android:text="@string/children"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/childagetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/childage"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/dimen_6dp"
                    app:layout_constraintLeft_toRightOf="@+id/childtxt"
                    app:layout_constraintTop_toTopOf="@+id/childtxt"
                    app:layout_constraintBottom_toBottomOf="@+id/childtxt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/ontheway"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/childtxt"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dimen_10dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_10dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/dimen_6dp"
                    app:cardElevation="@dimen/dimen_4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/dimen_6dp">

                        <ImageView
                            android:id="@+id/minimize_child"
                            android:padding="@dimen/dimen_4dp"
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:layout_margin="@dimen/dimen_4dp"
                            android:src="@drawable/minusicon"
                            app:tint="@color/text_color"/>

                        <TextView
                            android:id="@+id/numberofchild"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textSize="@dimen/dimen_16sp"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            android:padding="@dimen/dimen_6dp"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/addition_child"
                            android:padding="@dimen/dimen_4dp"
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:layout_margin="@dimen/dimen_4dp"
                            android:src="@drawable/addicon"
                            app:tint="@color/text_color"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/infant_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/child_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/infanttxt"
                    android:text="@string/infant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/infantagetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infantage"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/dimen_6dp"
                    app:layout_constraintLeft_toRightOf="@+id/infanttxt"
                    app:layout_constraintTop_toTopOf="@+id/infanttxt"
                    app:layout_constraintBottom_toBottomOf="@+id/infanttxt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/ontheway"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/infanttxt"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dimen_10dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_10dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/dimen_6dp"
                    app:cardElevation="@dimen/dimen_4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/dimen_6dp">

                        <ImageView
                            android:id="@+id/minimize_infanttxt"
                            android:padding="@dimen/dimen_4dp"
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:layout_margin="@dimen/dimen_4dp"
                            android:src="@drawable/minusicon"
                            app:tint="@color/text_color"/>

                        <TextView
                            android:id="@+id/numberofinfanttxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_6dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/dimen_16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/addition_infanttxt"
                            android:padding="@dimen/dimen_4dp"
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:layout_margin="@dimen/dimen_4dp"
                            android:src="@drawable/addicon"
                            app:tint="@color/text_color"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>



    </LinearLayout>


    <TextView
        android:id="@+id/choosecabintitle"
        app:layout_constraintTop_toBottomOf="@+id/infant_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chooseclass"
        android:textSize="@dimen/dimen_12sp"
        android:layout_margin="@dimen/dimen_10dp"
        android:textColor="@color/inputtext_boxstroke"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/economycard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/dimen_6dp"
        app:cardElevation="@dimen/dimen_4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choosecabintitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_6dp">

            <TextView
                android:id="@+id/ecotxt"
                android:layout_width="wrap_content"
                android:text="@string/economy"
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/inputtext_boxstroke"
                android:padding="@dimen/dimen_6dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/preeconomycard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/dimen_6dp"
        app:cardElevation="@dimen/dimen_4dp"
        app:layout_constraintLeft_toRightOf="@+id/economycard"
        app:layout_constraintTop_toBottomOf="@+id/choosecabintitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_6dp">

            <TextView
                android:id="@+id/preecotxt"
                android:layout_width="wrap_content"
                android:text="@string/preeconomy"
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/inputtext_boxstroke"
                android:padding="@dimen/dimen_6dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/businesscard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/dimen_6dp"
        app:cardElevation="@dimen/dimen_4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preeconomycard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_6dp">

            <TextView
                android:id="@+id/businesstxt"
                android:layout_width="wrap_content"
                android:text="@string/business"
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/inputtext_boxstroke"
                android:padding="@dimen/dimen_6dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/firstcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/dimen_6dp"
        app:cardElevation="@dimen/dimen_4dp"
        app:layout_constraintLeft_toRightOf="@+id/businesscard"
        app:layout_constraintTop_toBottomOf="@+id/preeconomycard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_6dp">

            <TextView
                android:id="@+id/firstclasstxt"
                android:layout_width="wrap_content"
                android:text="@string/first"
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/inputtext_boxstroke"
                android:padding="@dimen/dimen_6dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/donelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:background="@drawable/searchbutton"
        app:layout_constraintTop_toBottomOf="@+id/firstcard">

        <TextView
            android:text="@string/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14sp"
            android:textStyle="bold"
            android:padding="@dimen/dimen_10dp"/>


    </LinearLayout>










</androidx.constraintlayout.widget.ConstraintLayout>