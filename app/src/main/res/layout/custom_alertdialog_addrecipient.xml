<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:text="Are you sure want to Proceed?"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:text="Name Parveen Kumar"
        android:gravity=""
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        android:fontFamily="@font/roboto_medium"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:text="Accountant No. 583298323027"
        android:gravity=""
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        android:fontFamily="@font/roboto_medium"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/ll"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="No"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginRight="7.5dp"
            android:id="@+id/tvBtnNo"
            android:textSize="15dp"
            android:background="@drawable/bg_button_border_blue"
            android:layout_height="45dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Yes"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="7.5dp"
            android:id="@+id/tvBtnYes"
            android:textSize="15dp"
            android:background="@drawable/bg_button_blue"
            android:layout_height="45dp"/>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>