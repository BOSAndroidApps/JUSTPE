<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.travel.flightBooking.activity.FlightSearchListActivity">


    <LinearLayout
        android:id="@+id/fromcityLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fromtoback"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_marginHorizontal="@dimen/dimen_6dp"
        android:padding="@dimen/dimen_6dp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_gravity="center"
            android:src="@drawable/left_arrow"
            app:tint="@color/black"/>


        <LinearLayout
            android:id="@+id/fromlayout"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/fromcity"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                android:id="@+id/fromAirPortDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Pokhara"
                    android:textStyle="bold"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/dimen_14sp"/>

                <TextView
                    android:id="@+id/airPortCode"
                    android:hint="PKR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_12sp"
                    android:layout_marginLeft="@dimen/dimen_4dp"/>

                <TextView
                    android:id="@+id/airPortName"
                    android:hint="Agatti Island"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_10sp"
                    android:layout_marginLeft="@dimen/dimen_6dp"/>

            </LinearLayout>

                <EditText
                    android:id="@+id/fromcityedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_14sp"
                    android:hint="@string/hint"
                    android:background="@null"
                    android:visibility="gone"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/tocityLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fromtoback"
        app:layout_constraintTop_toBottomOf="@+id/fromcityLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_marginHorizontal="@dimen/dimen_6dp"
        android:padding="@dimen/dimen_6dp">

        <ImageView
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_30dp"
            android:src="@drawable/landing"
            android:layout_gravity="center"
            app:tint="@color/text_hint_color"/>

        <LinearLayout
            android:id="@+id/toCitylayout"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/tocity"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/toAirPortDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toCityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Pokhara"
                    android:textStyle="bold"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/dimen_14sp"/>

                <TextView
                    android:id="@+id/toCityAirportCode"
                    android:hint="PKR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_12sp"
                    android:layout_marginLeft="@dimen/dimen_4dp"/>

                <TextView
                    android:id="@+id/toCityAirportName"
                    android:hint="Agatti Island"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6dp"
                    android:textSize="@dimen/dimen_10sp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/tocityedittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_14sp"
                android:hint="@string/hint"
                android:background="@null"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/airportList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tocityLayout"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="@dimen/dimen_20dp"
        tools:listitem="@layout/airport_name_list_layout"
        android:layout_marginHorizontal="@dimen/dimen_6dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>