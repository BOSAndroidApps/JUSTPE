<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.travel.busactivity.BookingTravel">

    <!-- Navigation Drawer -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/headerlayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_56dp"
                        android:background="@color/blue"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/backBtn"
                                android:layout_width="@dimen/dimen_40dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/dimen_10dp"
                                android:gravity="start"
                                android:src="@drawable/ic_back" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="120sp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:text="Bus Search"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen_16dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="60dp"
                                android:gravity="center"
                                android:visibility="gone"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/busLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="vertical">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/buscard"
                                            android:layout_width="@dimen/dimen_60dp"
                                            android:layout_height="@dimen/dimen_60dp"
                                            app:cardBackgroundColor="@color/white"
                                            app:cardCornerRadius="@dimen/dimen_10dp">

                                            <androidx.constraintlayout.widget.ConstraintLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <ImageView
                                                    android:id="@+id/busicon"
                                                    android:layout_width="@dimen/dimen_50dp"
                                                    android:layout_height="@dimen/dimen_40dp"
                                                    android:src="@drawable/bus"
                                                    app:layout_constraintLeft_toLeftOf="parent"
                                                    app:layout_constraintRight_toRightOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    app:tint="@color/blue" />

                                                <TextView
                                                    android:id="@+id/bus"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_medium"
                                                    android:text="Bus"
                                                    android:textAlignment="center"
                                                    android:textColor="@color/blue"
                                                    android:textSize="@dimen/dimen_12sp"
                                                    app:layout_constraintLeft_toLeftOf="parent"
                                                    app:layout_constraintRight_toRightOf="parent"
                                                    app:layout_constraintTop_toBottomOf="@+id/busicon" />


                                            </androidx.constraintlayout.widget.ConstraintLayout>

                                        </androidx.cardview.widget.CardView>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/flightsLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/dimen_20dp"
                                        android:orientation="vertical">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/flightcard"
                                            android:layout_width="@dimen/dimen_60dp"
                                            android:layout_height="@dimen/dimen_60dp"
                                            app:cardBackgroundColor="@color/blue"
                                            app:cardCornerRadius="@dimen/dimen_10dp">

                                            <androidx.constraintlayout.widget.ConstraintLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <ImageView
                                                    android:id="@+id/flighticon"
                                                    android:layout_width="@dimen/dimen_50dp"
                                                    android:layout_height="@dimen/dimen_40dp"
                                                    android:src="@drawable/flight"
                                                    app:layout_constraintLeft_toLeftOf="parent"
                                                    app:layout_constraintRight_toRightOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent" />

                                                <TextView
                                                    android:id="@+id/flights"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_medium"
                                                    android:text="Flights"
                                                    android:textAlignment="center"
                                                    android:textColor="@color/white"
                                                    android:textSize="@dimen/dimen_12sp"
                                                    app:layout_constraintLeft_toLeftOf="parent"
                                                    app:layout_constraintRight_toRightOf="parent"
                                                    app:layout_constraintTop_toBottomOf="@+id/flighticon" />
                                            </androidx.constraintlayout.widget.ConstraintLayout>

                                        </androidx.cardview.widget.CardView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/trainsLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/dimen_20sp"
                                        android:orientation="vertical">


                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/traincard"
                                            android:layout_width="@dimen/dimen_60dp"
                                            android:layout_height="@dimen/dimen_60dp"
                                            app:cardBackgroundColor="@color/blue"
                                            app:cardCornerRadius="@dimen/dimen_10dp">

                                            <androidx.constraintlayout.widget.ConstraintLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <ImageView
                                                    android:id="@+id/trainicon"
                                                    android:layout_width="@dimen/dimen_50dp"
                                                    android:layout_height="@dimen/dimen_40dp"
                                                    android:src="@drawable/train"
                                                    app:layout_constraintLeft_toLeftOf="parent"
                                                    app:layout_constraintRight_toRightOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent" />

                                                <TextView
                                                    android:id="@+id/trains"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_medium"
                                                    android:text="Trains"
                                                    android:textAlignment="center"
                                                    android:textColor="@color/white"
                                                    android:textSize="@dimen/dimen_12sp"
                                                    app:layout_constraintLeft_toLeftOf="parent"
                                                    app:layout_constraintRight_toRightOf="parent"
                                                    app:layout_constraintTop_toBottomOf="@+id/trainicon" />


                                            </androidx.constraintlayout.widget.ConstraintLayout>

                                        </androidx.cardview.widget.CardView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/hotelsLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/dimen_20sp"
                                        android:orientation="vertical">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/hotelcard"
                                            android:layout_width="@dimen/dimen_60dp"
                                            android:layout_height="@dimen/dimen_60dp"
                                            app:cardBackgroundColor="@color/blue"
                                            app:cardCornerRadius="@dimen/dimen_10dp">

                                            <androidx.constraintlayout.widget.ConstraintLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <ImageView
                                                    android:id="@+id/hotelicon"
                                                    android:layout_width="@dimen/dimen_50dp"
                                                    android:layout_height="@dimen/dimen_40dp"
                                                    android:src="@drawable/hotelicon"
                                                    app:layout_constraintLeft_toLeftOf="parent"
                                                    app:layout_constraintRight_toRightOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent" />

                                                <TextView
                                                    android:id="@+id/hotels"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_medium"
                                                    android:text="Hotels"
                                                    android:textAlignment="center"
                                                    android:textColor="@color/white"
                                                    android:textSize="@dimen/dimen_12sp"
                                                    app:layout_constraintLeft_toLeftOf="parent"
                                                    app:layout_constraintRight_toRightOf="parent"
                                                    app:layout_constraintTop_toBottomOf="@+id/hotelicon" />


                                            </androidx.constraintlayout.widget.ConstraintLayout>

                                        </androidx.cardview.widget.CardView>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_plan"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="18dp"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <!-- From Destination Spinner -->
                            <com.bos.payment.appName.utils.searchableSp.SearchableSpinner
                                android:id="@+id/fromDestinationSp"
                                android:layout_width="match_parent"
                                android:layout_height="?attr/dropdownListPreferredItemHeight"
                                android:background="@drawable/bg_edittext"
                                android:gravity="center"
                                android:paddingStart="@dimen/dimen_10dp"
                                android:paddingEnd="@dimen/dimen_10dp" />

                            <!-- To Destination Spinner -->
                            <com.bos.payment.appName.utils.searchableSp.SearchableSpinner
                                android:id="@+id/toDestinationSp"
                                android:layout_width="match_parent"
                                android:layout_height="?attr/dropdownListPreferredItemHeight"
                                android:layout_marginTop="@dimen/dimen_20dp"
                                android:background="@drawable/bg_edittext"
                                android:gravity="center"
                                android:paddingStart="@dimen/dimen_10dp"
                                android:paddingEnd="@dimen/dimen_10dp" />

                            <!--                        <TextView-->
                            <!--                            android:id="@+id/departureLabel"-->
                            <!--                            android:layout_width="wrap_content"-->
                            <!--                            android:layout_height="wrap_content"-->
                            <!--                            android:layout_marginStart="@dimen/dimen_4sp"-->
                            <!--                            android:layout_marginTop="@dimen/dimen_16dp"-->
                            <!--                            android:text="Departure Date"-->
                            <!--                            android:textColor="#888888"-->
                            <!--                            android:textSize="14sp"-->
                            <!--                            app:layout_constraintStart_toStartOf="parent"-->
                            <!--                            app:layout_constraintTop_toTopOf="parent" />-->

                            <!-- Select Date -->
                            <!--                        <com.google.android.material.textfield.TextInputLayout-->
                            <!--                            android:id="@+id/dateText"-->
                            <!--                            android:layout_width="match_parent"-->
                            <!--                            android:layout_height="wrap_content"-->
                            <!--                            android:layout_marginTop="@dimen/dimen_20dp"-->
                            <!--                            android:hint="Select Date"-->
                            <!--                            android:textColorHint="#FF8A99AF"-->
                            <!--                            android:visibility="visible">-->

                            <EditText
                                android:id="@+id/date"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="@dimen/dimen_20dp"
                                android:background="@drawable/bg_edittext"
                                android:drawableStart="@drawable/calendar_icon"
                                android:drawablePadding="10dp"
                                android:focusable="false"
                                android:fontFamily="@font/roboto_medium"
                                android:hint="Enter date"
                                android:inputType="date"
                                android:maxLines="1"
                                android:paddingStart="@dimen/dimen_10dp"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                            <!--                        </com.google.android.material.textfield.TextInputLayout>-->

                            <!--                        <LinearLayout-->
                            <!--                            android:layout_width="match_parent"-->
                            <!--                            android:layout_height="wrap_content"-->
                            <!--                            android:orientation="horizontal">-->

                            <!--                            <androidx.recyclerview.widget.RecyclerView-->
                            <!--                                android:id="@+id/dateRecyclerView"-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:layout_marginTop="8dp"-->
                            <!--                                android:orientation="horizontal"-->
                            <!--                                app:layout_constraintEnd_toEndOf="parent"-->
                            <!--                                app:layout_constraintStart_toStartOf="parent"-->
                            <!--                                app:layout_constraintTop_toBottomOf="@id/departureLabel"-->
                            <!--                                tools:itemCount="4" />-->
                            <!--                        </LinearLayout>-->

                            <!-- Bus Type Selection -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_16dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/seaterBus_card"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/white"
                                    app:cardCornerRadius="@dimen/dimen_20dp"
                                    app:cardElevation="5dp"
                                    app:cardPreventCornerOverlap="false"
                                    app:cardUseCompatPadding="false">

                                    <TextView
                                        android:id="@+id/seater"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto_medium"
                                        android:padding="@dimen/dimen_10dp"
                                        android:text="Seater"
                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="16sp" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/sleeperBus_card"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/white"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/dimen_20dp"
                                    app:cardElevation="5dp"
                                    app:cardPreventCornerOverlap="false"
                                    app:cardUseCompatPadding="false">

                                    <TextView
                                        android:id="@+id/sleeper"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dimen_10dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto_medium"
                                        android:padding="@dimen/dimen_10dp"
                                        android:text="Sleeper"
                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="16sp" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/acBus_card"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/white"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/dimen_20dp"
                                    app:cardElevation="5dp"
                                    app:cardPreventCornerOverlap="false"
                                    app:cardUseCompatPadding="false">

                                    <TextView
                                        android:id="@+id/acBus"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dimen_10dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto_medium"
                                        android:padding="@dimen/dimen_10dp"
                                        android:text="AC"
                                        android:textAlignment="center"
                                        android:textColor="@color/light_black"
                                        android:textSize="16sp" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <!-- Search Buses Button -->
                            <Button
                                android:id="@+id/search_buses"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/button_background_blue"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Search Buses"
                                android:textAllCaps="false"
                                android:textColor="#ffffff"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        android:layout_gravity="bottom|center_horizontal"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_30dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:itemIconTint="@color/colorPrimaryDark"
            app:menu="@menu/booking_menu" />

    </androidx.cardview.widget.CardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.drawerlayout.widget.DrawerLayout>