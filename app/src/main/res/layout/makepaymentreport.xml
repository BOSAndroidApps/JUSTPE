<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="@dimen/dimen_4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Status : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/statustxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dimen_4dp"
                    android:layout_toRightOf="@id/status"
                    android:text="Pending"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16sp" />


                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dimen_4dp"
                    android:layout_alignParentRight="true"
                    android:text="â‚¹ 580.0"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_20sp" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:background="@color/greylight" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/dimen_4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight=".6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Reference ID"
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_weight=".1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=":"
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/referenceID"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="000000000366"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_14sp"
                        android:layout_below="@+id/status"
                        android:layout_alignParentLeft="true"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/txnidlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight=".6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="TransactionID"
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_weight=".1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=":"
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:id="@+id/transactionid"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tickettxt"
                        android:text="txn0001234"
                        android:textSize="@dimen/dimen_14sp"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight=".6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Payment Mode"
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_weight=".1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=":"
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/paymentmode"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tickettxt"
                        android:text="UPI"
                        android:textSize="@dimen/dimen_14sp"
                        android:textColor="@color/black"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:padding="@dimen/dimen_10dp">

                <TextView
                    android:id="@+id/datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234567890"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_14sp" />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>