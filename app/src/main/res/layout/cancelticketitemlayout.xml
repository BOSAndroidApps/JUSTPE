<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/from_tocity_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_6dp"
                android:padding="@dimen/dimen_4dp">

                <!-- Booking Ref No Layout -->
                <LinearLayout
                    android:id="@+id/book_ref_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/bookref"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOOKING REF NO"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/booking_RefNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="BBB7AMYW"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- PNR Layout -->
                <LinearLayout
                    android:id="@+id/pnr_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/book_ref_layout"
                    app:layout_constraintEnd_toStartOf="@id/view_ticket"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/pnrNot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PNR No"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pnr_Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="7A7MEPS4"
                        android:textColor="@color/red"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- View Ticket Layout -->
                <LinearLayout
                    android:id="@+id/view_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="end">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dimen_60dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/dimen_6dp"
                        app:cardElevation="@dimen/dimen_2dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="@dimen/dimen_16dp"
                                android:layout_height="@dimen/dimen_16dp"
                                android:src="@drawable/eyes" />

                            <TextView
                                android:id="@+id/viewDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VIEW"
                                android:padding="2dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_12sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/passangerDetailslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingBottom="@dimen/dimen_6dp">

            <View
                android:layout_width="match_parent"
                android:layout_height=".8dp"
                android:layout_margin="@dimen/dimen_6dp"
                android:background="@color/hint_color_add_leads"
                app:layout_constraintBottom_toBottomOf="@+id/passangertitle"
                app:layout_constraintLeft_toRightOf="@+id/passangertitle"
                app:layout_constraintTop_toTopOf="@+id/passangertitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Bus Operator Name "
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_12sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@+id/fromcity"
                        app:layout_constraintRight_toRightOf="@+id/fromcity"
                        app:layout_constraintTop_toBottomOf="@+id/fromcity" />

                    <TextView
                        android:id="@+id/busoperatorname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Shanti Bus Service"
                        android:textAlignment="textStart"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/dimen_12sp"
                        app:layout_constraintLeft_toLeftOf="@+id/fromcity"
                        app:layout_constraintRight_toRightOf="@+id/fromcity"
                        app:layout_constraintTop_toBottomOf="@+id/fromcity" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Bus Type "
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_12sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@+id/fromcity"
                        app:layout_constraintRight_toRightOf="@+id/fromcity"
                        app:layout_constraintTop_toBottomOf="@+id/fromcity" />

                    <TextView
                        android:id="@+id/busType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Non AC Seater (2+3)"
                        android:textAlignment="textStart"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/dimen_12sp"
                        app:layout_constraintLeft_toLeftOf="@+id/tocity"
                        app:layout_constraintRight_toRightOf="@id/tocity"
                        app:layout_constraintTop_toBottomOf="@+id/tocity" />

                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/boarding_time"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="10:30 AM"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/view1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fromcity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Dhanbad"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintLeft_toLeftOf="@+id/boarding_time"
                    app:layout_constraintRight_toRightOf="@+id/boarding_time"
                    app:layout_constraintTop_toBottomOf="@+id/boarding_time" />


                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height=".6dp"
                    android:layout_gravity="center"
                    android:background="@color/button_text_gray"
                    app:layout_constraintBottom_toBottomOf="@id/durationTime"
                    app:layout_constraintRight_toLeftOf="@+id/durationTime"
                    app:layout_constraintTop_toTopOf="@id/durationTime" />

                <RelativeLayout
                    android:id="@+id/durationTime"
                    android:layout_width="@dimen/dimen_80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/durationborder"
                    app:cardCornerRadius="@dimen/dimen_10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:hint="10 h 05 m"
                        android:padding="5dp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/dimen_12sp" />

                </RelativeLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height=".6dp"
                    android:layout_gravity="center"
                    android:background="@color/button_text_gray"
                    app:layout_constraintBottom_toBottomOf="@id/durationTime"
                    app:layout_constraintLeft_toRightOf="@+id/durationTime"
                    app:layout_constraintTop_toTopOf="@id/durationTime" />

                <TextView
                    android:id="@+id/dropping_time"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_6dp"
                    android:hint="12:20 PM"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/view2"
                    app:layout_constraintLeft_toRightOf="@+id/view2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tocity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Bokaro"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintLeft_toLeftOf="@+id/dropping_time"
                    app:layout_constraintRight_toRightOf="@+id/dropping_time"
                    app:layout_constraintTop_toBottomOf="@+id/dropping_time" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/paxview1"
                    android:layout_width="0dp"
                    android:layout_height=".8dp"
                    android:layout_margin="@dimen/dimen_6dp"
                    android:background="@color/hint_color_add_leads"
                    app:layout_constraintBottom_toBottomOf="@+id/passangertitle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/passangertitle"
                    app:layout_constraintTop_toTopOf="@+id/passangertitle" />

                <TextView
                    android:id="@+id/passangertitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤ Traveller Details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/paxview2"
                    android:layout_width="0dp"
                    android:layout_height=".8dp"
                    android:layout_margin="@dimen/dimen_6dp"
                    android:background="@color/hint_color_add_leads"
                    app:layout_constraintBottom_toBottomOf="@+id/passangertitle"
                    app:layout_constraintLeft_toRightOf="@+id/passangertitle"
                    app:layout_constraintTop_toTopOf="@+id/passangertitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_6dp">

                <LinearLayout
                    android:id="@+id/passangernamelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_4dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/pasIcon"
                        android:layout_width="@dimen/dimen_14dp"
                        android:layout_height="@dimen/dimen_14dp"
                        android:src="@drawable/usericon"
                        app:layout_constraintBottom_toBottomOf="@id/mainPassangerName"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/mainPassangerName" />

                    <TextView
                        android:id="@+id/mainPassangerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:text=" Narendra Yadav"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_12sp"
                        app:layout_constraintLeft_toRightOf="@id/pasIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_4dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/passangernamelayout">

                    <ImageView
                        android:id="@+id/clockicon"
                        android:layout_width="@dimen/dimen_14dp"
                        android:layout_height="@dimen/dimen_14dp"
                        android:src="@drawable/clock"
                        app:layout_constraintBottom_toBottomOf="@id/traveltxt"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/traveltxt" />


                    <TextView
                        android:id="@+id/traveltxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Travel Date "
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_12sp"
                        app:layout_constraintLeft_toRightOf="@+id/clockicon"
                        app:layout_constraintTop_toBottomOf="@+id/mainPassangerName" />


                    <TextView
                        android:id="@+id/travelDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:text="01/08/2025"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_12sp"
                        app:layout_constraintLeft_toRightOf="@+id/traveltxt"
                        app:layout_constraintTop_toBottomOf="@+id/mainPassangerName" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:paddingBottom="@dimen/dimen_4dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_2dp"
                    app:cardCornerRadius="@dimen/dimen_8dp"
                    app:cardBackgroundColor="@color/light_grey">

                <LinearLayout
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:cardCornerRadius="@dimen/dimen_10sp">

                    <ImageView
                        android:layout_width="@dimen/dimen_14dp"
                        android:layout_height="@dimen/dimen_14dp"
                        android:src="@drawable/usericon" />

                    <TextView
                        android:id="@+id/passangerquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="2"
                        android:padding="@dimen/dimen_6dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/dimen_12sp" />

                </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="@dimen/dimen_6dp"
                    android:layout_height="0dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_2dp"
                    app:cardCornerRadius="@dimen/dimen_8dp"
                    app:cardBackgroundColor="@color/light_grey">

                <RelativeLayout
                    android:layout_width="@dimen/dimen_80dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dimen_10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/view1"
                    app:layout_constraintRight_toLeftOf="@id/view2"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/dimen_6dp"
                        android:text="One - way"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_12sp" />

                </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="@dimen/dimen_6dp"
                    android:layout_height="0dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/detailslayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_2dp"
                    app:cardCornerRadius="@dimen/dimen_8dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    app:cardBackgroundColor="@color/light_grey">

                <LinearLayout
                    android:layout_width="@dimen/dimen_80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:cardCornerRadius="@dimen/dimen_10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/dimen_6dp"
                        android:text="Details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_12sp" />

                    <ImageView
                        android:id="@+id/arrowimage"
                        android:layout_width="@dimen/dimen_14dp"
                        android:layout_height="@dimen/dimen_14dp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrowdown" />

                </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <TableLayout
                android:id="@+id/passangerList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:background="@android:color/white"
                android:visibility="gone"
                android:layout_marginHorizontal="@dimen/dimen_4dp">

            </TableLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>