<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.travel.flightBooking.activity.FlightDetailListActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fromtoback"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/dimen_10dp"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_gravity="center"
            android:src="@drawable/left_arrow"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fromtocityname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Delhi to Mumbai"
                android:textStyle="bold"
                android:textColor="@color/edittext_color"/>

            <TextView
                android:id="@+id/datepassangerclassname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 Jul | 1 Adult | First"
                android:textSize="@dimen/dimen_10sp"
                android:textColor="@color/edittext_color"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit"
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/dimen_6dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:src="@drawable/editicon"
                app:tint="@color/blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:textColor="@color/blue"
                android:textSize="@dimen/dimen_12sp"/>

        </LinearLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/flightlistshown"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginHorizontal="@dimen/dimen_6dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/fligetdetails_itemlayout"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/fab"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="@dimen/dimen_80dp"
        android:layout_margin="@dimen/dimen_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:src="@drawable/filtericon"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            app:tint="@color/white"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>