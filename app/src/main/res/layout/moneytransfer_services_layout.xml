<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="@dimen/dimen_10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/servicecard"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        app:cardCornerRadius="@dimen/dimen_120dp"
        android:layout_margin="3dp"
        app:cardBackgroundColor="@color/dashboardiconbg"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/servicesImage"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:src="@drawable/eminew"
            android:padding="3dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/app_name" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/servicesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay to mobile number"
        android:textSize="@dimen/dimen_14sp"
        android:textColor="@color/black"
        android:paddingStart="12dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/servicecard"
        app:layout_constraintTop_toTopOf="@id/servicecard"
        app:layout_constraintBottom_toBottomOf="@id/servicecard"
        app:layout_constraintEnd_toEndOf="parent" />

</LinearLayout>