<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvToolbarName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dimen_100dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start"
            android:text="Payment Failed"
            android:textColor="@color/red"
            android:textSize="19dp" />

        <ImageView
            android:id="@+id/menuBarBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="@dimen/dimen_10sp"
            android:src="@drawable/menu_bar" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_100dp"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20dp"
        app:cardElevation="@dimen/dimen_20dp"
        android:background="@color/light_black"
        app:cardMaxElevation="@dimen/dimen_20dp"
        app:cardCornerRadius="@dimen/dimen_20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Status"
                android:textSize="@dimen/dimen_22sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAllCaps="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Amount:-"
                    android:layout_weight="1"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/rechargeAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 779"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:padding="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction ID:-"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/transacton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="status"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:padding="10dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>