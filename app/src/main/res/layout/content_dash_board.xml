<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_dash_board">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menulayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/menuicon"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_40dp"
            android:padding="@dimen/dimen_6dp"
            android:src="@drawable/menuicon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/username"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:src="@drawable/dashboardlogo"
            android:scaleType="centerCrop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@+id/menulayout"
        app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/retailersDashboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="1dp"
        android:orientation="vertical">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="@dimen/dimen_10dp"/>

        <LinearLayout
            android:id="@+id/moneyTransferLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/dimen_10dp"
            app:layout_constraintTop_toBottomOf="@+id/viewpager">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Money Transfer"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:src="@drawable/nexticon"/>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/moneytransferlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_4dp"
                tools:listitem="@layout/moneytransfer_services_layout"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/scanpaycard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginHorizontal="@dimen/dimen_60dp"
            app:cardCornerRadius="@dimen/dimen_20dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/dashboardiconbg"
            app:layout_constraintTop_toBottomOf="@+id/moneyTransferLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_6dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qrcodedashboard"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scanpay"
                    android:textSize="@dimen/dimen_14sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/justpecolortext"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/financialservicesimageview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/cardbg"
            app:cardUseCompatPadding="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scanpaycard"
            android:layout_marginHorizontal="@dimen/dimen_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_10dp">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/financial_services"
                        android:textSize="18sp"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Finances Made Easy"
                        android:layout_alignLeft="@id/title"
                        android:textSize="13sp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:textColor="@color/dashboardtextcolor"
                        android:textStyle="normal"
                        android:layout_below="@id/title"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/title"
                        android:layout_alignLeft="@id/title"
                        app:cardUseCompatPadding="true"
                        android:layout_marginRight="30dp"
                        android:layout_alignParentBottom="true"
                        app:cardBackgroundColor="@color/dashboardcardcolor"
                        app:cardCornerRadius="@dimen/dimen_6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/dimen_6dp"
                            android:text="Explore"
                            android:textColor="@color/justpecolortext"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        android:src="@drawable/financeservicesicon"/>

                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/billrechargeimageview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/cardbg"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/financialservicesimageview"
            android:layout_marginHorizontal="@dimen/dimen_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_10dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        android:src="@drawable/billrechargebanner"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bills_amp_recharges"
                        android:textSize="18sp"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="With 0 Processing Fees"
                        android:layout_alignLeft="@id/title1"
                        android:textSize="13sp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:textColor="@color/dashboardtextcolor"
                        android:textStyle="normal"
                        android:layout_below="@id/title1"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/title1"
                        android:layout_alignLeft="@id/title1"
                        app:cardUseCompatPadding="true"
                        android:layout_marginRight="30dp"
                        android:layout_alignParentBottom="true"
                        app:cardBackgroundColor="@color/dashboardcardcolor"
                        app:cardCornerRadius="@dimen/dimen_6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/dimen_6dp"
                            android:text="Pay Your Bill"
                            android:textColor="@color/justpecolortext"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/travelimageview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/cardbg"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/billrechargeimageview"
            android:layout_marginHorizontal="@dimen/dimen_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_10dp">


                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Travel"
                        android:textSize="18sp"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Go Anywhere at low prices"
                        android:layout_alignLeft="@id/title2"
                        android:textSize="13sp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:textColor="@color/dashboardtextcolor"
                        android:textStyle="normal"
                        android:layout_below="@id/title2"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/title2"
                        android:layout_alignLeft="@id/title2"
                        android:layout_marginRight="30dp"
                        app:cardUseCompatPadding="true"
                        android:layout_alignParentBottom="true"
                        app:cardBackgroundColor="@color/dashboardcardcolor"
                        app:cardCornerRadius="@dimen/dimen_6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/dimen_6dp"
                            android:text="Book Tickets"
                            android:textColor="@color/justpecolortext"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="50dp"
                        android:src="@drawable/planedashboard"
                        android:elevation="1dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginLeft="-10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_30dp"
                        android:src="@drawable/travelbanner"/>

                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>