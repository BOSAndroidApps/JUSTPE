                        <TextView
                            android:id="@+id/mobileNoRecharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="Mobile No"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dateRecharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="DATE"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/operatorRecharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="Operator"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/amountRecharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="Amount"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/transactionRecharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="TRANSACTION No"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/statusRecharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:layout_marginEnd="@dimen/dimen_10sp"
                            android:hint="Status"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/remarksRecharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:hint="type"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />
