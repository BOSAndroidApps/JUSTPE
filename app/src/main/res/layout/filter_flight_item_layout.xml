<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_10dp"
            android:src="@drawable/cross_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/edittext_color" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp"
            android:text="@string/sortfilters"
            android:textColor="@color/lightBlack"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/cross"
            app:layout_constraintLeft_toRightOf="@+id/cross"
            app:layout_constraintTop_toTopOf="@+id/cross" />


        <TextView
            android:id="@+id/flightcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="-7dp"
            android:text="80 Flights Found"
            android:textColor="@color/lightBlack"
            android:textSize="@dimen/dimen_12sp"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottomview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_below="@+id/header"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                app:cardCornerRadius="@dimen/dimen_6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp">

                    <TextView
                        android:id="@+id/flighttype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:text="@string/flighttype"
                        app:layout_constraintTop_toBottomOf="@+id/header" />

                    <LinearLayout
                        android:id="@+id/flighttypeoption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/flighttype">

                        <LinearLayout
                            android:id="@+id/nonstoplayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:background="@drawable/outerborder"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/nonstopicon"
                                android:layout_width="@dimen/dimen_50dp"
                                android:layout_height="@dimen/dimen_60dp"
                                android:layout_gravity="center"
                                android:padding="@dimen/dimen_10dp"
                                android:src="@drawable/nonstopicon" />

                            <TextView
                                android:id="@+id/nonstoptxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="@dimen/dimen_6dp"
                                android:textColor="@color/text_color"
                                android:text="Non-Stop" />

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".5" />


                        <LinearLayout
                            android:id="@+id/stopslayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".5"
                            android:background="@drawable/outerborder"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/stopsicon"
                                android:layout_width="@dimen/dimen_50dp"
                                android:layout_height="@dimen/dimen_60dp"
                                android:layout_gravity="center"
                                android:padding="@dimen/dimen_10dp"
                                android:src="@drawable/crossroad" />

                            <TextView
                                android:id="@+id/stopstext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="@dimen/dimen_6dp"
                                android:textColor="@color/text_color"
                                android:text="Stops" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/filterbytype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/searchbutton"
                        android:gravity="center"
                        android:padding="@dimen/dimen_10dp"
                        android:text="@string/filterflighttype"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/header" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                app:cardCornerRadius="@dimen/dimen_6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp">

                    <TextView
                        android:id="@+id/departuretime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:text="@string/depart"
                        app:layout_constraintTop_toBottomOf="@+id/flighttypeoption" />

                    <LinearLayout
                        android:id="@+id/topdepatureitemlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/departuretime">


                        <LinearLayout
                            android:id="@+id/before6layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:background="@drawable/outerborder"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/before6icon"
                                android:layout_width="@dimen/dimen_50dp"
                                android:layout_height="@dimen/dimen_50dp"
                                android:layout_gravity="center"
                                android:padding="@dimen/dimen_14dp"
                                android:src="@drawable/before6" />

                            <TextView
                                android:id="@+id/before6txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="@dimen/dimen_6dp"
                                android:textColor="@color/text_color"
                                android:text="Before 6 am" />

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".3" />


                        <LinearLayout
                            android:id="@+id/after6amlayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".5"
                            android:background="@drawable/outerborder"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/after6amimage"
                                android:layout_width="@dimen/dimen_50dp"
                                android:layout_height="@dimen/dimen_60dp"
                                android:layout_gravity="center"
                                android:padding="@dimen/dimen_10dp"
                                android:src="@drawable/sunrise" />

                            <TextView
                                android:id="@+id/after6amtxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="@dimen/dimen_6dp"
                                android:textColor="@color/text_color"
                                android:text="6 am - 12 pm" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bottomdepatureitemlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/topdepatureitemlayout">


                        <LinearLayout
                            android:id="@+id/after12pmlayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:background="@drawable/outerborder"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/after12pmicon"
                                android:layout_width="@dimen/dimen_50dp"
                                android:layout_height="@dimen/dimen_50dp"
                                android:layout_gravity="center"
                                android:padding="@dimen/dimen_14dp"
                                android:src="@drawable/sun" />

                            <TextView
                                android:id="@+id/after12pmtxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="@dimen/dimen_6dp"
                                android:textColor="@color/text_color"
                                android:text="12 pm - 6 pm" />

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight=".3" />


                        <LinearLayout
                            android:id="@+id/after6pmlayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".5"
                            android:background="@drawable/outerborder"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/after6pmicon"
                                android:layout_width="@dimen/dimen_50dp"
                                android:layout_height="@dimen/dimen_50dp"
                                android:layout_gravity="center"
                                android:padding="@dimen/dimen_14dp"
                                android:src="@drawable/moon" />

                            <TextView
                                android:id="@+id/after6pmtxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="@dimen/dimen_6dp"
                                android:textColor="@color/text_color"
                                android:text="After 6 pm" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                app:cardCornerRadius="@dimen/dimen_6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp">

                    <TextView
                        android:id="@+id/airlineschoos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:text="@string/chooseairlines"
                        app:layout_constraintTop_toBottomOf="@+id/bottomdepatureitemlayout" />

                    <LinearLayout
                        android:id="@+id/chooseairlines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/airlineschoos">


                        <LinearLayout
                            android:id="@+id/chooseairlineslayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/outerborder"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/searchairlines"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:hint="Choose Airline"
                                android:padding="@dimen/dimen_10dp"
                                android:textSize="@dimen/dimen_14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/showairlinelist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/chooseairlines"
                        tools:listitem="@layout/airlineslistitemlayot" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:padding="@dimen/dimen_10dp"
                        app:layout_constraintTop_toBottomOf="@+id/header">

                        <TextView
                            android:id="@+id/filterbyfliteoperator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/dimen_20dp"
                            android:background="@drawable/searchbutton"
                            android:gravity="center"
                            android:textSize="@dimen/dimen_14sp"
                            android:padding="@dimen/dimen_6dp"
                            android:text="@string/filterflight"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/clearAllFilter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/dimen_20dp"
                            android:background="@drawable/searchbutton"
                            android:gravity="center"
                            android:padding="@dimen/dimen_6dp"
                            android:textSize="@dimen/dimen_14sp"
                            android:text="@string/filterclear"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_alignParentRight="true"
                           />

                    </RelativeLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>



