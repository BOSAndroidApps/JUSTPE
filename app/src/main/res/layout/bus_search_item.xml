<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:background="@drawable/bg_button_plane"
                    android:padding="@dimen/dimen_10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dimen_16dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/companyName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto_medium"
                                android:layout_weight="1.5"
                                android:gravity="start"
                                android:text="Company Name"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/travelAmount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_10dp"
                                android:layout_weight=".5"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="end"
                                android:text="₹ 600"
                                android:textAllCaps="false"
                                android:textColor="@color/light_orange"
                                android:textSize="@dimen/dimen_16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/busName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto_medium"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Bus Name"
                                android:textAllCaps="false"
                                android:textSize="@dimen/dimen_14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/arrivalTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="start"
                                android:text="6:00 PM - 3:00 AM"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_10sp"
                                android:textStyle="bold" />
<!--                            <TextView-->
<!--                                android:id="@+id/droppingTime"-->
<!--                                android:layout_width="0dp"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_marginStart="10dp"-->
<!--                                android:layout_weight="1"-->
<!--                                android:gravity="start"-->
<!--                                android:text="Company Name"-->
<!--                                android:textAllCaps="false"-->
<!--                                android:textColor="@color/black"-->
<!--                                android:textSize="@dimen/dimen_14sp"-->
<!--                                android:textStyle="bold" />-->

                            <TextView
                                android:id="@+id/totalTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="9h"
                                android:layout_marginEnd="10sp"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_12sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4sp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/availableSeat"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="start"
                                android:text="25 Seat Left"
                                android:textAllCaps="false"
                                android:textColor="@color/green"
                                android:textSize="@dimen/dimen_16sp"
                                android:textStyle="bold" />

<!--                            <TextView-->
<!--                                android:id="@+id/travelAmount"-->
<!--                                android:layout_width="0dp"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_marginEnd="@dimen/dimen_10dp"-->
<!--                                android:layout_weight="1"-->
<!--                                android:gravity="end"-->
<!--                                android:text="₹ 600"-->
<!--                                android:textAllCaps="false"-->
<!--                                android:textColor="@color/light_orange"-->
<!--                                android:textSize="@dimen/dimen_18sp"-->
<!--                                android:textStyle="bold" />-->

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
