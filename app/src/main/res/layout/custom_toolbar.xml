<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:layout_height="60dp">

    <LinearLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:layout_marginEnd="@dimen/dimen_4dp"
        android:backgroundTint="@color/lightest_blue"
        android:background="@drawable/bg_brown_corner_light"
        android:weightSum="4"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/menuLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/ic_menu"
            android:layout_marginStart="20dp"
            android:id="@+id/ivMenu"
            android:layout_gravity="center"
            android:layout_height="20dp"
            app:tint="@color/black" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5">
        <ImageView
            android:id="@+id/dashboardImage"
            android:layout_width="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/aops__logo"
            android:layout_height="@dimen/dimen_60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="BOS Center"
            android:visibility="gone"
            android:id="@+id/tvToolbarName"
            android:textSize="19sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

<!--        <com.google.android.material.imageview.ShapeableImageView-->
<!--            android:id="@+id/menu"-->
<!--            android:layout_width="?actionBarSize"-->
<!--            android:layout_height="?actionBarSize"-->
<!--            android:padding="@dimen/dimen_6dp"-->
<!--            android:gravity="end"-->
<!--            android:src="@drawable/sider_mover" />-->

        <ImageView
            android:id="@+id/sideMoverBtn"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:src="@drawable/sider_mover"
            android:layout_gravity="end|center"
            android:layout_height="@dimen/dimen_30dp"
            app:tint="@color/black" />

    </LinearLayout>
</androidx.cardview.widget.CardView>