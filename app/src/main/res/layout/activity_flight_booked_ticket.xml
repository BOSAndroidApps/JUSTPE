<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flightdetailsheader"
    tools:context=".ui.view.travel.flightBooking.activity.FlightBookedTicketActivity">

    <ImageView
        android:id="@+id/back1"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:src="@drawable/left_arrow"
        app:tint="@color/white"
        android:layout_marginTop="@dimen/dimen_10dp"/>

    <TextView
        android:id="@+id/boardingpasstitle"
        app:layout_constraintTop_toBottomOf="@id/back1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/boardingpass"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="-10dp"
        android:padding="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_18sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_20dp"
        android:layout_margin="@dimen/dimen_12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/boardingpasstitle"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="@dimen/dimen_30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fromairportcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JFK"
                        android:textSize="@dimen/dimen_24sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/fromcityname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/text_color"
                        android:text="NEW YORK"/>

                    <TextView
                        android:id="@+id/fromdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jul ,01 2025"
                        android:textSize="@dimen/dimen_12sp"
                        android:textColor="@color/edittext_color"/>

                    <TextView
                        android:id="@+id/fromtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:30 am"
                        android:textSize="@dimen/dimen_12sp"
                        android:textColor="@color/edittext_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/flightname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Air India"
                        android:textSize="@dimen/dimen_18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                    <ImageView
                        android:id="@+id/flighticon"
                        android:layout_width="@dimen/dimen_20dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:textStyle="bold"
                        android:layout_margin="4dp"
                        android:textSize="@dimen/dimen_18sp"
                        android:textColor="@color/text_color"
                        android:src="@drawable/airindia"/>

                    <TextView
                        android:id="@+id/pnrNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P9PNRV"
                        android:textSize="@dimen/dimen_16sp"
                        android:textStyle="bold"
                        android:textColor="@color/red"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Airline PNR"
                        android:textSize="@dimen/dimen_12sp"
                        android:textColor="@color/edittext_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/toairportcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LHR"
                        android:layout_marginRight="@dimen/dimen_4dp"
                        android:textSize="@dimen/dimen_24sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tocityname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LONDON"
                        android:textStyle="bold"
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/text_color"/>

                    <TextView
                        android:id="@+id/todate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jul ,01 2025"
                        android:textSize="@dimen/dimen_12sp"
                        android:textColor="@color/edittext_color"/>

                    <TextView
                        android:id="@+id/totime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:30 am"
                        android:textSize="@dimen/dimen_12sp"
                        android:textColor="@color/edittext_color"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_20dp">

                <ImageView
                    android:id="@+id/pointcircle"
                    android:layout_width="@dimen/dimen_12dp"
                    android:layout_height="@dimen/dimen_12dp"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pointcircle"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_12dp"
                    android:src="@drawable/dottedline"
                    app:tint="@color/blue"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/pointcircle"
                    android:layout_toStartOf="@id/dotpoint"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dotpoint"
                    android:layout_width="@dimen/dimen_8dp"
                    android:layout_height="@dimen/dimen_8dp"
                    app:cardCornerRadius="@dimen/dimen_12dp"
                    app:cardBackgroundColor="@color/blue"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

                <ImageView
                    android:id="@+id/airplaneicon"
                    android:layout_width="@dimen/dimen_140dp"
                    android:layout_height="@dimen/dimen_80dp"
                    android:src="@drawable/airplane"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp">


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="left|center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passanger"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/dimen_16sp"/>

                    <TextView
                        android:id="@+id/passangerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Annu"
                        android:textAllCaps="true"
                        android:textSize="@dimen/dimen_12sp"
                        android:textColor="@color/black"
                       />

                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="right|center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flight"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/dimen_16sp"/>

                    <TextView
                        android:id="@+id/flightnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A 0137"
                        android:textSize="@dimen/dimen_12sp"
                        android:textColor="@color/black"
                       />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp">


                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:gravity="left|center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Class"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/dimen_14sp"/>

                    <TextView
                        android:id="@+id/classname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Economy"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departure Terminal"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/dimen_14sp"/>

                    <TextView
                        android:id="@+id/originterminal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1A"
                        android:textSize="10sp"
                        android:gravity="start"
                        android:textColor="@color/black"
                        />

                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/terminal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arrival Terminal"
                        android:textAlignment="viewEnd"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/dimen_14sp"/>

                    <TextView
                        android:id="@+id/arrivalterminal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2A"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        app:layout_constraintLeft_toLeftOf="@+id/terminal"
                        app:layout_constraintTop_toBottomOf="@id/terminal"
                        app:layout_constraintRight_toRightOf="@+id/terminal" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/leftcard"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:layout_alignParentLeft="true"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/teal_300"
                    app:cardCornerRadius="@dimen/dimen_40dp"
                    android:layout_marginLeft="-10dp"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10dp"
                    android:src="@drawable/dottedline"
                    app:tint="@color/blue"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/leftcard"
                    android:layout_toStartOf="@id/rightcard"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/rightcard"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-10dp"
                    app:cardBackgroundColor="@color/blue"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/dimen_40dp"/>

            </RelativeLayout>


            <ImageView
                android:id="@+id/generatebarcode"
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/dimen_20dp"
                android:src="@drawable/barcode"/>



            <LinearLayout
                android:id="@+id/downloadticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:background="@drawable/searchbutton"
                app:layout_constraintTop_toBottomOf="@+id/extraofferList">

                <TextView
                    android:text="@string/downloadticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_14sp"
                    android:textStyle="bold"
                    android:padding="@dimen/dimen_10dp"/>


            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>







</androidx.constraintlayout.widget.ConstraintLayout>