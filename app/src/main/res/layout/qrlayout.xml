<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Dimmed Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.65" />

    <!-- Main Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#F8F8F8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:orientation="vertical">

            <!-- Close Icon -->
            <ImageView
                android:id="@+id/crossicon"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:src="@drawable/cross_icon"
                android:padding="6dp"
                android:layout_gravity="end"
                app:tint="@color/black" />

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment QR"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingTop="6dp"/>

            <!-- QR Image -->
            <ImageView
                android:id="@+id/qrimage"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/qricon"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#DDDDDD"/>

            <!-- Section Title -->
            <TextView
                android:id="@+id/txtBankDetailsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Account Details"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal" />

            <!-- Bank Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#F8F8F8"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:orientation="vertical">

                    <!-- Bank Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bank Name"
                            android:textColor="#444"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/bankName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SBI Bank"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Account No -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Account No"
                            android:textColor="#444"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/accountNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123456789012"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- IFSC -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="IFSC Code"
                            android:textColor="#444"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/ifsc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SBIN0001234"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Branch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Branch"
                            android:textColor="#444"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/branch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delhi Main"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
