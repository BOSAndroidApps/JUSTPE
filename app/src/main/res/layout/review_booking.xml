                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/userName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="start"
                                    android:text="MR. Ravi"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12sp" />

                                <TextView
                                    android:id="@+id/userAge"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="25 yrs"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12sp" />

                                <TextView
                                    android:id="@+id/seatNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="seat L4"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/mobileNo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="start"
                                    android:text="9762363923"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_14sp" />

                                <TextView
                                    android:id="@+id/emailId"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="ravikumar@gmail.com"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_14sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reviewBookingDetailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_10dp"
                        android:background="@drawable/bg_button_plane"
                        android:padding="@dimen/dimen_10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/dimen_10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1.5"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="start"
                                    android:text="Booking Details"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_18sp"
                                    android:textStyle="bold" />

                                <!--                        <TextView-->
                                <!--                            android:id="@+id/travelAmount"-->
