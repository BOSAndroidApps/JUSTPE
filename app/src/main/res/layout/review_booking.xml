                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="start"
                                    android:text="Booking reference Number"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/referenceNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="BJJJ57BB"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="start"
                                    android:text="Supplier Reference No"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12sp" />

                                <TextView
                                    android:id="@+id/supplier_RefNo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="CX6khxjgq0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="start"
                                    android:text="PNR Number"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12sp" />

                                <TextView
                                    android:id="@+id/transport_PNR"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="5AE5JVR6"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="10dp"
                                android:gravity="center"
                                android:text="Your bus seat booking is successful"
                                android:textColor="@color/green"
                                android:textSize="@dimen/dimen_18sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/showTicketLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_30dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <Button
                            android:id="@+id/showTicketBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_edittext"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Show your ticket"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_16sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/finalSeatLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:background="@drawable/bg_edittext"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/totalprice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight=".7"
                    android:paddingStart="10sp"
                    android:text="₹ ____"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/proceedToPay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_weight="1.3"
                    android:background="@drawable/bg_edittext"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Proceed To Pay"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

