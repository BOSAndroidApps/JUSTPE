<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.Dashboard.tomobile.SendWalletAmountPage">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:src="@drawable/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fitsSystemWindows="true"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="90dp"
            android:layout_marginTop="-50dp"
            app:cardBackgroundColor="@color/db_brown"
            app:cardElevation="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/firstCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="bc"
                android:inputType="textCapWords"
                android:textAllCaps="true"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/containercard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp"
            android:layout_marginTop="-30dp"
            android:layout_marginHorizontal="@dimen/dimen_10dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/light_blue"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Bos Center"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/contactno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="1234567890"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/agencynamecard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20dp"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Verified Agency Name"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/agencynumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Bos Retailor"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="@dimen/dimen_20dp"
                                android:layout_height="@dimen/dimen_20dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/verified" />

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/walletamt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet Amt : "
            android:textColor="@color/text_color"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/containercard"
            android:textSize="@dimen/dimen_12sp"/>

        <LinearLayout
            android:id="@+id/amountlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/walletamt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginHorizontal="@dimen/dimen_10dp">

            <TextView
                android:layout_width="@dimen/dimen_10sp"
                android:layout_height="wrap_content"
                android:hint="â‚¹"
                android:textColorHint="@color/text_color"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_20dp"/>


            <EditText
                android:id="@+id/etAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:inputType="numberDecimal"
                android:hint="0"
                android:textColorHint="@color/text_color"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusDown="@id/remarks"
                android:imeOptions="actionNext"
                android:textStyle="bold"
                android:padding="@dimen/dimen_10dp"
                android:textSize="@dimen/dimen_60sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/remarks"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/amountlayout"
            android:layout_marginHorizontal="@dimen/dimen_10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dottedborder"
            android:fontFamily="@font/roboto_medium"
            android:hint="+ Add Remark"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textSize="12dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:imeOptions="actionDone"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/tvBtnProceed"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_button_blue"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Pay Now"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginHorizontal="@dimen/dimen_10dp"
            android:layout_below="@+id/remarks"/>


    </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>