<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_10dp"
                android:src="@drawable/cross_icon"
                app:tint="@color/edittext_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp"
                android:text="@string/addtraveller"
                android:textColor="@color/lightBlack"
                android:textSize="@dimen/dimen_16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/warningmsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        app:cardCornerRadius="@dimen/dimen_4dp"
        app:cardBackgroundColor="@color/blurlight"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp">

        <ImageView
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:src="@drawable/noteicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Important : "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_14sp"
            android:layout_marginLeft="@dimen/dimen_6dp"/>

        <TextView
            android:text="@string/userentrywarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dimen_6dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_50dp"
        app:layout_constraintTop_toBottomOf="@+id/warningmsg"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/gendertitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GENDER"
            android:textColor="@color/button_text_gray"/>

        <LinearLayout
            android:id="@+id/genderlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/malecard"
                android:layout_weight="1"
                android:layout_width="0dp"
                app:cardCornerRadius="@dimen/dimen_4dp"
                app:cardBackgroundColor="@color/teal_200"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/maletxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MALE"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10dp"
                    android:textColor="@color/white"/>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_weight=".1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/femalecard"
                android:layout_weight="1"
                android:layout_width="0dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dimen_4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/femaletxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FEMALE"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10dp"
                    android:textColor="@color/teal_700"/>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <Spinner
            android:id="@+id/titleSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:padding="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/outerborder"/>

        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/firstname"
            android:textSize="@dimen/dimen_14sp"
            android:background="@drawable/outerborder"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_10dp"/>

        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lastname"
            android:textSize="@dimen/dimen_14sp"
            android:background="@drawable/outerborder"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_10dp"/>

    <LinearLayout
        android:id="@+id/doblayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/outerborder"
        android:layout_marginTop="@dimen/dimen_10dp">

        <EditText
            android:id="@+id/dob"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/dob"
            android:textSize="@dimen/dimen_14sp"
            android:background="@null"
            android:padding="@dimen/dimen_10dp"/>

        <ImageView
            android:id="@+id/dobcalander"
            android:layout_weight=".2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_30dp"
            android:src="@drawable/calendar"
            android:layout_gravity="center"/>


    </LinearLayout>

        <EditText
            android:id="@+id/passport_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/passportno"
            android:textSize="@dimen/dimen_14sp"
            android:background="@drawable/outerborder"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_10dp"/>

        <EditText
            android:id="@+id/passport_issuing_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/passportcountryname"
            android:textSize="@dimen/dimen_14sp"
            android:background="@drawable/outerborder"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_10dp"/>

        <LinearLayout
            android:id="@+id/passportexpirydatelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/outerborder"
            android:layout_marginTop="@dimen/dimen_10dp">

            <EditText
                android:id="@+id/passport_expire_date"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/passportexpiredate"
                android:textSize="@dimen/dimen_14sp"
                android:background="@null"
                android:padding="@dimen/dimen_10dp"/>

            <ImageView
                android:id="@+id/passport_expire_date_calander"
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_30dp"
                android:src="@drawable/calendar"
                android:layout_gravity="center"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/confirmbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:background="@drawable/searchbutton"
            app:layout_constraintTop_toBottomOf="@+id/extraofferList">

            <TextView
                android:text="@string/cnfrm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                android:padding="@dimen/dimen_10dp"/>


        </LinearLayout>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>