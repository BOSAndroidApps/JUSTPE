<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".ui.view.travel.busfragment.UpcomingBus">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/showingUpcomingList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/upcomingticketitemlayout"
       android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>


    <LinearLayout
        android:id="@+id/notfounddatalayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
       android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/ticketicon"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:src="@drawable/busticketicon"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No booked tickets found"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/ticketicon"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/dimen_50dp"
            app:layout_constraintRight_toRightOf="parent"/>


    </LinearLayout>

</RelativeLayout>
