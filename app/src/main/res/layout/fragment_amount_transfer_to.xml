<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".app.ui.view.Dashboard.Wallet.Fragment.AmountTransferToFragment">

    <RadioButton
        android:layout_width="wrap_content"
        android:text="Customer"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:checked="true"
        android:textSize="15dp"
        android:fontFamily="@font/roboto_medium"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Transfer To Customer"
        android:gravity=""
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        android:fontFamily="@font/roboto_medium"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textColorHint="@color/button_text_gray"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button_plane"
        android:layout_height="45dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:text="Transfer Amount"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity=""
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        android:fontFamily="@font/roboto_medium"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textColorHint="@color/button_text_gray"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button_plane"
        android:layout_height="45dp"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:text="Remark"
        android:gravity=""
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        android:fontFamily="@font/roboto_medium"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:textColorHint="@color/button_text_gray"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button_plane"
        android:layout_height="75dp"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:text="Enter Transaction PIN"
        android:gravity=""
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        android:fontFamily="@font/roboto_medium"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:textColorHint="@color/button_text_gray"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button_plane"
        android:layout_height="45dp"/>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="30dp"
        android:id="@+id/ll"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Cancel"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginRight="7.5dp"
            android:id="@+id/tvBtnCancel"
            android:textSize="15dp"
            android:background="@drawable/bg_button_border_blue"
            android:layout_height="45dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Transfer Amount"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="7.5dp"
            android:id="@+id/tvBtnSubmit"
            android:textSize="15dp"
            android:background="@drawable/bg_button_blue"
            android:layout_height="45dp"/>
    </LinearLayout>
</LinearLayout>