<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#F2F2F2"/>

    <!-- Rounded corners -->
    <corners
        android:radius="16dp"
        android:topLeftRadius="0dp" />

    <!-- Optional padding inside bubble -->
    <padding
        android:left="8dp"
        android:top="6dp"
        android:right="8dp"
        android:bottom="6dp"/>
</shape>
