<!-- preview_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="#FF4CAF50"
                android:startColor="#FF1E88E5"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Optional: Add a slight overlay for a soft effect -->
    <item android:right="16dp" android:top="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#80000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
