<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/light_black"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.Dashboard.activity.RechargeHistory">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvToolbarName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dimen_100dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start"
            android:text="Recharge History"
            android:textColor="@color/grey"
            android:textSize="19dp" />

        <ImageView
            android:id="@+id/menuBarBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="@dimen/dimen_10sp"
            android:src="@drawable/menu_bar" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_margin="@dimen/dimen_10sp"
        android:id="@+id/llTransactionHistory"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Transaction History"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/grey"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:padding="@dimen/dimen_10dp"
            tools:listitem="@layout/item_transactionhistory"
            android:id="@+id/rvTransactionHistoryRec"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>